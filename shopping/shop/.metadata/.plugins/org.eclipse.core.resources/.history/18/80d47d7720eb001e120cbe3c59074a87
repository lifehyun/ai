<!-- 로그인을 누르면 member/login으로 요청을 한다. postmapping 방식 -->
<div layout:fragment="content">
 <form role="form" method="post" action="/members/login"><!-- 로그인을 누르면 members/login으로 요청을 한다. postmapping 방식 -->
    <div class="form-group">
      <label th:for="email">이메일주소</label>
      <input type="email" name="email" class="form-control" placeholder="이메일을 입력해 주세요">
    </div>
	
<!-- 회원가입을 누르면 members의 new로 요청을 한다.getmapping 방식-->
    <div class="form-group">
      <label th:for="password">비밀번호</label>
      <input type="password" name="password" id="password" class="form-control" placeholder="비밀번호">
    </div>
    <p th:if = "${loginErrorMsg}" class="error" th:text="${loginErrorMsg}"></p>
    <button class="btn btn-primary">로그인</button> 	
    <button type="button" class="btn btn-primary" onClick="location.href='/members/new'">회원가입</button> 	
    <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}">
 </form>
</div>
