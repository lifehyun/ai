package javaBasic.ch01.sec12;

public class Calculator {

	public static void main(String[] args) {
		int x = 1;                     //변수 x를 선언하고 1을 저장
		int y = 2;                    //변수  y를 선언하고 2를 저장
		int a = 3;                    //변수  a를 선언하고 3를 저장
		int b = 4;                    //변수  b를 선언하고 4를 저장
		int result = x + y + a + b ;          //변수 result를 선언하고 x와 y를 더한 값을 저장
		System.out.println(result); //콘솔에 출력하는 메소드 호출
	}

	public static void main(String[]args) {
		//5명 아르바이트생 급여 계산하는 프로그램 작성하기
		// 1명일 경우 급여 계산하기
		//형식 변수형태 변수명 = 값;ㅣ
		String name;
		name= "홍길동"; //이름

		int basicPay=50000; //급여
		String phoneNumber = "010-1234-5678"; //전화번호
	    String accountNumner = "국민 123-12-1234"; //계좌번호
	    String dept="알바생"; //직금
	    boolean sex = "true"; //성별 남자
	    double tex = "0.03"; // 세금 비율
	    
	    //출력하기
	    System.out.println(name +"  "+ basicpay + "   " + phoneNumber);
	  
	    
	}
}
