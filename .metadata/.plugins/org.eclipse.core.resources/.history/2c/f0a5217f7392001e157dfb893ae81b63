package javaBasic.ch02.sec09;

public class operationPromotionExample {

	public static void main(String[] args) {
		byte result1 = 10 + 20;

    System.out.println("result1:  " + result1);
 
	}

	byte v1 = 10;
	int  v2 = 20;
	int  result2 = v1 + v2;
	
	
	byte v3 = 10;
	int v4 = 100;
	long v5 = 1000l;
	long result3 = v3 + v4 + v5;

	char v6 = 'A';
	char v7 = 1;
	int result4 = v6 + v7;
	
	int v8 = 10;
	int result5 = v9 / 4.0;
	
	
	int v10 = 1;
	int v11 = 2;
	double result7 = (double) v10 / v11;
	
