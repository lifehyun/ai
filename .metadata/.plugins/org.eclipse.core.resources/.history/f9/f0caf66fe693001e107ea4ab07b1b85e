package javaBasic.ch04.sec02;

import java.util.Scanner;

public class 은행예금 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("은행 예금프로젝트");
		System.out.println("메뉴를 입력하세요?");
		String menu =sc.nextLine(); //키보드를 "1" , "2"
		
		int balance=0; //예금액 변수
		
		while( !menu.equals("4") ) {
			System.out.println("------------------------------");
			System.out.println("1.예금 | 2.출금 |3. 잔고 | 4 종료 ");
			System.out.println("------------------------------");
			System.out.println("선택>");
			menu = sc.nextLine();
			
			switch(menu) {
				case "1":System.out.print("예금액>");
						balance = sc.nextInt(10000);
						break;	//switch문을 빠져나가라
				case "2":
				case "3":
				case "4":
				default :
			}
		}

	}

}
