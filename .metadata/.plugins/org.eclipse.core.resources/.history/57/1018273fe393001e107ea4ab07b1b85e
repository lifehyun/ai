package javaBasic.ch04.sec02;

public class 확인문제4장 {
	//p.138
	public static void main(String[] args) {
		// 3
		// for문 1~100까지 나오게 하기
		int sum3 = 0; //3의 배수의 합을 넣을 변수
		for(int i=1; i <= 100; i++) {
			if( i % 3 == 0) {
				sum3 = sum3 + i;
			}
			System.out.println(i);
			
		}
		System.out.println("1~100 까지 3의배수 합은"+sum3);

		
		//5
		for(int x=1; x <= 10; x++) {
			for(int y=1; y <= 10; y++) {
			if( 4*x + 5*y == 60) {
				System.out.println("x="+ x + "y=" + y);
			}
			}
			
		}
		
		//6
		String code = '*'
		for(int  i=1; i<=5; i++) {
			for( int j=1; j<= i; j++) {
				System.out.print("*");
			}
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
